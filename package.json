{
	"name": "generator-nsis",
	"version": "0.11.2",
	"description": "Yeoman generator for NSIS scripts",
	"author": "Jan T. Sott",
	"license": "MIT",
	"keywords": [
		"yeoman-generator",
		"nsis",
		"nullsoft",
		"installer",
		"setup"
	],
	"type": "module",
	"exports": "./generators/app",
	"files": [
		"generators",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"lint:e18e": "#e18e-cli analyze",
		"lint:ejs": "ejslint generators/**/*.ejs",
		"lint:code": "biome check",
		"lint": "concurrently --prefix '{name}' -c 'green,blue' 'npm:lint:*'",
		"prepack": "rimraf installer.nsi license.txt",
		"prepare": "lefthook install",
		"publish:npm": "np --any-branch",
		"test": "uvu --ignore tests/__helper.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/generator-nsis.git"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@nsis/language-data": "^0.9.3",
		"@sindresorhus/slugify": "^3.0.0",
		"glob": "^13.0.0",
		"makensis": "3.0.3",
		"semver": "^7.7.3",
		"spdx-license-list": "^6.10.0",
		"terminal-link": "^5.0.0",
		"yeoman-generator": "^7.5.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@idleberg/configs": "^0.4.1",
		"@lukeed/uuid": "^2.0.1",
		"@types/node": "^24.5.2",
		"concurrently": "^9.2.1",
		"ejs-lint": "^2.0.1",
		"mem-fs": "^4.1.2",
		"np": "^10.2.0",
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2",
		"tsm": "^2.3.0",
		"typescript": "^5.9.3",
		"uvu": "^0.5.6",
		"yeoman-assert": "^3.1.1",
		"yeoman-environment": "^5.1.1",
		"yeoman-test": "^11.2.0"
	},
	"lint-staged": {
		"*.ejs": "ejslint",
		"*.(js|json)": [
			"prettier --write"
		]
	},
	"packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
